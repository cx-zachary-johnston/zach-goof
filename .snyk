# version tracking for internal record keeping
version: v1.27.0

# Exclude common noise paths
exclude:
  files:
    - "**/test/**"
    - "**/node_modules/**"
    - "**/vendor/**"
    - "**/dist/**"

# Ignored issues (either temporarily or because they're accepted risk)
ignores:
  SNYK-JS-LODASH-567746:
    - '*':
        reason: "False positive in lodash used only in build scripts"
        expires: 2025-06-01T00:00:00Z
  SNYK-JAVA-ORGSPRINGFRAMEWORK-123456:
    - src/main/java/com/example/legacy/OldService.java:
        reason: "Deprecated module scheduled for removal"
        expires: 2025-01-01T00:00:00Z
  SNYK-JS-LODASH-7368:
    - reason: "business decision. SecOps team wants this ignored for testing reasons"
      expires: "2025-01-01T00:00:00Z"

# Custom code rules (from Snyk Code) (this example does not appear in codebase and is just for display in .snyk file)
code:
  sanitizers:
    - id: sanitize-user-input
      title: Sanitize User Input
      description: >
        Custom sanitizer to detect basic escaping of user input from request body
      pattern: |
        function sanitize(input) {
          return input.replace(/[<>]/g, '');
        }
      locations:
        - path: "src/utils/sanitizers.js"

  # Additional custom configuration for rules (mocked for realism)
  rules:
    - id: no-unsafe-eval
      enabled: true
      severity: high
    - id: detect-hardcoded-credentials
      enabled: true
      severity: critical

# Optional metadata
meta:
  createdBy: snykyzach@creativeteam.local
  lastUpdated: 2025-03-01T12:34:56Z
